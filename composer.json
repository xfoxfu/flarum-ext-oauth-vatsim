{
    "name": "vatprc/oauth-vatsim",
    "description": "Log in to your Flarum forum with VATSIM Connect",
    "keywords": [
        "flarum",
        "vatsim",
        "sso",
        "oauth",
        "login"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/xfoxfu/flarum-ext-oauth-vatsim/issues",
        "source": "https://github.com/xfoxfu/flarum-ext-oauth-vatsim",
        "forum": "https://discuss.flarum.org/d/29191"
    },
    "require": {
        "flarum/core": "^v1.8.5",
        "fof/oauth": "^1.6.9",
        "luchianenco/oauth2-amazon": "^2.0"
    },
    "authors": [
        {
            "name": "xfoxfu",
            "homepage": "https://xfox.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "VATPRC\\OAuthVATSIM\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Log In With VATSIM",
            "category": "feature",
            "icon": {
                "name": "fab fa-fly",
                "backgroundColor": "#0072e3",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/nicknames"
            ]
        }
    }
}
